{
  "version": "0.3.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "client: chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/nuxt-app"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server: nuxt",
      "outputCapture": "std",
      "runtimeExecutable": "${env:HOME}/.asdf/shims/node",
      "program": "${workspaceFolder}/nuxt-app/node_modules/nuxt/bin/nuxt.mjs",
      "args": [
        "dev",
        "--port",
        "3000"
      ],
      "cwd": "${workspaceFolder}/nuxt-app"
    }
  ],
  "compounds": [
    {
      "name": "fullstack: nuxt",
      "configurations": [
        "server: nuxt",
        "client: chrome"
      ]
    }
  ]
}
